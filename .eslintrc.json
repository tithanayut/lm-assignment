{
  "root": true,
  "extends": ["standard-with-typescript", "plugin:react/recommended", "prettier"],
  "plugins": ["simple-import-sort"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  }
}
